<h1>Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task) %> completed: <%= task.completed %> 
      <%= link_to 'Delete task', task_path(task), method: :delete, data: {confirm: 'Are you sure?'} %>
    </li>
  <% end %>
</ul>
<hr>
<%= link_to 'Create new task', tasks_new_path %>
